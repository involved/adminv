<%- if content_for? :sidebar_left %>
  <%= adminv_container :width => :sidebar, :class => 'sidetabs' do |container| %>
    <%= container.content do |content| %>
      <%= yield :sidebar_left %>
    <% end %>
  <% end %>
<% end %>

<div class="block-wrapper align-<%= content_for?(:sidebar_left) ? "right" : 'left' %>">
	<%= yield %>
</div>

<%- if content_for? :sidebar_right %>
	<%= yield :sidebar_right %>
<% end %>