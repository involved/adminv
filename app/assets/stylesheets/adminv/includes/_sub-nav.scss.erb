	font-size: 11px; color: #333; line-height: 14px; font-weight: bold;
	text-decoration: none;
    text-shadow: 0 2px 2px #FBF99E;
}

header nav.sub #secondary-menu a{
	font-size: 12px; color: #333; line-height: 15px; font-weight: bold;
	text-decoration: none;
    text-shadow: 0 2px 2px #fff;
}

header nav.sub #secondary-menu li.active a{
	color: #f8f8f8;
	text-shadow: 0px 1px 0px #333;
}


