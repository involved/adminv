/* @group Sub Nav */

header nav.sub{
  @include clear-fix;
  background: #f5f5f5;
  border-bottom: #e1e1e1 1px solid; 
}

header nav.sub ul#secondary-menu{
	float: left;
	display: inline-block; 
	list-style: none;
	height: 29px;
	padding: 8px 0px 8px 0px;
}
	header nav.sub #secondary-menu li{ 
		float: left;
		display: inline-block;
		margin: 0px 10px 0px 0px;
		border-radius: 2px; 
		-moz-border-radius: 1px;
		border: #ADADAD 1px solid;
		background: #E4E4E4; /* old browsers */
		background: -moz-linear-gradient(top, #E4E4E4 0%, #E4E4E4 49%, #DFDFDF 50%, #D8D8D8 100%); /* firefox */
		background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#E4E4E4), color-stop(49%,#E4E4E4), color-stop(50%,#DFDFDF), color-stop(100%,#D8D8D8)); /* webkit */
		   
		-moz-box-shadow: inset 0 0px 4px 0  #c9c9c9;
		-webkit-box-shadow: inset 0 -1px 2px 0  #c9c9c9;
		box-shadow: inset 0 -1px 2px 0  #c9c9c9
	}
		header nav.sub #secondary-menu li:hover{
			-moz-box-shadow: none;
			-webkit-box-shadow: none;
			box-shadow: none;
			 -moz-box-shadow: 0 0 0 0;
		}
		 
			header nav.sub #secondary-menu li a{
				display: block;
				padding: 5px 15px;
				-moz-box-shadow: 0 1px 0 0 #F7F7F7 inset;
			}
			
		/* Active */	
		header nav.sub #secondary-menu li.active{ 
			border-top: #797979 1px solid;
			border-bottom: #797979 1px solid;		
			background: #0f3545; /* old browsers */
			background: -moz-linear-gradient(top, #999 0%, #7e7e7e 99%); /* firefox */
			background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#999), color-stop(99%,#7e7e7e)); /* webkit */		
			-moz-box-shadow: inset 0px 0px 24px 0px #666;
			-webkit-box-shadow: inset 0px 0px 24px 0px #666;
			box-shadow: 0px 0px 1px 0 #222 inset
		}
			header nav.sub #secondary-menu li.active a{ -moz-box-shadow: 0 0 0 0; }
			header nav.sub #secondary-menu li.active a:hover{ cursor: default; }
	
	
		/* Highlighted */
		header nav.sub #secondary-menu li.highlight{ 
			border: #C8B073 1px solid;
			background: #F8E723; /* old browsers */
			background: -moz-linear-gradient(top, #F8E723 0%, #F8E354 49%, #F5D84D 50%, #F7CE3F 100%); /* firefox */
			background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#F8E723), color-stop(49%,#F8E354), color-stop(50%,#F5D84D), color-stop(100%,#F7CE3F)); /* webkit */
			-moz-box-shadow:inset 0px 0px 1px 0px #999;
			-webkit-box-shadow:inset 0px 0px 1px 0px #999;
			box-shadow:inset 0px 0px 1px 0px #999;
		}



		
/* @end */

/* @group Sub Nav - Actions */

header nav.sub ul#actions-menu{
	float: left;
	display: inline-block; 
	list-style: none;
	height: 29px;
	padding: 8px 0px 8px 0px;
}
	header nav.sub #actions-menu li{ 
		float: left;
		display: inline-block;
		margin: 0px 0px 0px 10px;
		border-radius: 2px; 
		-moz-border-radius: 2px;

		border: #C8B073 1px solid;
		background: #F8E723; /* old browsers */
		background: -moz-linear-gradient(top, #F8E723 0%, #F8E354 49%, #F5D84D 50%, #F7CE3F 100%); /* firefox */
		background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#F8E723), color-stop(49%,#F8E354), color-stop(50%,#F5D84D), color-stop(100%,#F7CE3F)); /* webkit */
		   
		-moz-box-shadow:inset 0px 0px 1px 0px #999;
		-webkit-box-shadow:inset 0px 0px 1px 0px #999;
		box-shadow:inset 0px 0px 1px 0px #999;
	}
		header nav.sub #actions-menu li:hover{
			-moz-box-shadow: 0px 0px 1px 0px #999;
			-webkit-box-shadow: 0px 1px 0px 0px #999;
			box-shadow: 0px 0px 0px 1px #999;
		}
		 
		header nav.sub #actions-menu a{
			display: block;
			padding: 5px 15px;
			-moz-box-shadow: 0 1px 0 0 #FBF9A5 inset;
		}
		
/* @end */



